<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorLoginBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.witch.gtslsac_app_1.Fragments.Alquiler_Detalle_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/autocompleteAlquilerEquipos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight=".15"
                android:hint="EQUIPO"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_seleccionar_equipo_alquiler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/autocompleteAlquilerEquipos"
                android:layout_weight=".85"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:text="+"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="@drawable/button_text_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/autocompleteAlquilerTracto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight=".15"
                android:hint="CAMA/TRACTO"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_seleccionar_tracto_alquiler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/autocompleteAlquilerTracto"
                android:layout_weight=".85"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:text="+"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="@drawable/button_text_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/autocompleteAlquilerOperador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight=".15"
                android:hint="OPERADOR"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_seleccionar_operador_alquiler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/autocompleteAlquilerTracto"
                android:layout_weight=".85"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:text="+"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="@drawable/button_text_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/autocompleteAlquilerAyudante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight=".15"
                android:hint="RIGGER/AYUDANTE"
                android:singleLine="true" />

            <Button
                android:id="@+id/btn_seleccionar_ayudante_alquiler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/autocompleteAlquilerTracto"
                android:layout_weight=".85"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:text="+"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="@drawable/button_text_color" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">
            <TextView
                android:id="@+id/txt_fecha_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FECHA INICIO"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorBackground"
                android:textSize="20dp"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_fecha_fin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FECHA FIN"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorBackground"
                android:textSize="20dp"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

        </LinearLayout>
        <CheckBox
            android:id="@+id/chk_observacion_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="true"
            android:gravity="center"
            android:text="ObservaciÃ³n"
            android:textSize="18dp" />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtxt_observacion_Detalle"
            android:background="#FFFFFF"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="6"
            android:maxLines="6"
            android:minLines="5"
            android:scrollbars="vertical"/>

        <Button
            android:id="@+id/btn_agregar_detalle_alquiler"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorBackground"
            android:clickable="true"
            android:text="AGREGAR AL ALQUILER"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_cancelar_detalle_alquiler"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorBackground"
            android:clickable="true"
            android:text="CANCELAR"
            android:textColor="@android:color/white"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>
