<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/layoutContenedorEquipos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fotoEquiposCard"
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <!--android:scaleType="centerInside"-->

        <TextView
            android:id="@+id/nombreEquipoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nombre"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/cardview_dark_background"
            android:layout_toRightOf="@+id/fotoEquiposCard"

            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/marcaEquipoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Marca"
            android:textSize="18dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_toRightOf="@+id/fotoEquiposCard"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/modeloEquipoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:maxLines="1"
            android:text="Modelo"
            android:textSize="16dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_toRightOf="@+id/fotoEquiposCard"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/capacidadEquipoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Capacidad"
            android:textSize="18dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_toRightOf="@+id/fotoEquiposCard"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/anioEquipoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AÃ±o"
            android:textSize="18dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_toRightOf="@+id/capacidadEquipoCard"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            />
        <TextView
            android:id="@+id/placaEquipoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Placa"
            android:textSize="18dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_toRightOf="@+id/fotoEquiposCard"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/codigoEquipoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Codigo"
            android:textSize="18dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_toRightOf="@+id/placaEquipoCard"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"

            />

        <TextView
            android:id="@+id/colorEquipoCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Color"
            android:textSize="18dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_toRightOf="@+id/fotoEquiposCard"
            android:layout_alignParentTop="true"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>